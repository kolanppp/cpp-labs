{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active file (MSYS2 UCRT64 g++)",
      "type": "process",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "${file}",
        "-std=c++17",
        "-O2",
        "-Wall",
        "-Wextra",
        "-finput-charset=UTF-8",
        "-fexec-charset=UTF-8",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
   {
      "label": "Run active file (UTF-8 console)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "chcp 65001 > nul && ${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": "Build active file (MSYS2 UCRT64 g++)"
    }
  ]
}